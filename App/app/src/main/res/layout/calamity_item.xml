<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="10dp"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp"
    android:id="@+id/calamity_card">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="10dp"
            android:elevation="10dp">
            <ImageView
                android:id="@+id/calamityImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="centerCrop"
                android:src="@drawable/gr" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/calamityTitleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calamity Title"
            android:textSize="18sp"
            android:textStyle="bold"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/calamityPincodeTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pincode: 000000"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/affectedPeopleTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Affected People: 1000"
            android:paddingBottom="8dp"
            android:paddingHorizontal="8dp"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
